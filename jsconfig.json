{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true, // buena práctica para imports de librerías comunes
    "isolatedModules": true, // recomendado si usas Vite o herramientas modernas
    "resolveJsonModule": true // útil si importas archivos .json directamente
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
